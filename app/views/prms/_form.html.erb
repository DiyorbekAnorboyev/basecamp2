<%= form_with(model: prm) do |form| %>
<div class="text-center mt-3">
  <%= form.label :name, class:"fs-2" %><br>
  <%= form.text_field :name, class:"w-25 border rounded-3 border-5 " %>
</div>
<div class="text-center mt-3">
  <%= form.label :body, class:"fs-2"  %><br>
  <%= form.text_area :body, class:"w-25 border rounded-3 border-5 " %><br>
</div>
<div>
  <%- if action_name == 'new' %>
  <%= form.text_field :project_id, value: @project.id, type: :hidden %>
  <% end %>
</div>
<div class="text-center mt-3 ">
  <%=  form.submit "New Message", class: "text-light btn btn-info w-25" %>
</div>
<% end %>