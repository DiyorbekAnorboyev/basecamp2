<%= link_to "Back to projects", projects_path, class:'btn btn-primary mt-3' %>
<div class="card mt-3 mx-3 w-25">
    <div class="card-body">
        <h5 class="card-title mt-3"><strong><%= @project.name %></strong></h5>
        <p class="card-text bg-light border border-light"><%= @project.description %></p>
        <div class="mt-3 d-flex justify-content-between gap-1">
            <% if current_user == @project.user %>
            <div>
                <%= link_to "Edit ", edit_project_path(@project), class:'btn btn-primary' %>
            </div>
            <div>
                <%= button_to "Destroy ", @project, method: :delete , class:'btn btn-danger'%>
            </div>
            <div>
                <%= link_to "Message", project_prms_path(@project), class: "btn btn-success" %>
            </div>
            <div>
                <%= link_to "Attachment", project_patches_path(@project), class: "btn btn-success" %>
            </div>
            <div>
                <%= link_to "Todos", project_prtds_path(@project), class: "btn btn-success" %>
            </div>
            <% end %>
        </div>
        <div>
            <h5 class="mt-3 text-start"><strong>Created:</strong> <%= current_user.email%></h5>
        </div>
    </div>
</div>