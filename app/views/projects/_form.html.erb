<%= form_with(model: project) do |form| %>
<div class="text-center mt-3">
  <%= form.label :name, class:"fs-2" %><br>
  <%= form.text_field :name, class:"w-25 border rounded-3 border-5 " %>
</div>
<div class="text-center mt-3">
  <%= form.label :description, class:"fs-2"  %><br>
  <%= form.text_area :description, class:"w-25 border rounded-3 border-5 " %><br>
</div>
<div>
  <%= form.text_field :user_id, type: :hidden %>
</div>
<div class="text-center mt-3 ">
  <%=  form.submit "New Project", class: "text-light btn btn-info w-25" %>
</div>
<% end %>