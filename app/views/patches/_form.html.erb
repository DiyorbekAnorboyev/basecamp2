<%= form_with(model: patch) do |form| %>
<div class="text-center mt-3">
  <%= form.label :description, class:"fs-2" %><br>
  <%= form.text_area :description, class:"w-25 border rounded-3 border-5 " %>
</div>
<div class="d-flex justify-content-center w-100">
<div class="w-25 text-center mt-3">
  <%= form.file_field :pat, class:"form-control" %>
</div>
</div>
<div class="text-center mt-3">
  <%= form.text_field :project_id, type: :hidden, class: "btn btn-success" %>
</div>
<div class="text-center mt-3">
  <%=  form.submit  class: "text-light btn btn-info w-25" %>
</div>
<% end %>