<%= link_to "Back to projects", project_path(@project), class: 'text-light btn btn-primary mt-3' %>
<div class="container">
  <%= form_with(model: @prtd) do |form| %>
  <div class=" mt-3">
    <%= form.label :description, class:"fs-2" %><br>
    <%= form.text_field :description, class:"w-25 border rounded-3 border-5 " %>
  </div>
  <div>
    <%= form.text_field :project_id, type: :hidden %>
  </div>
  <div class=" mt-3 ">
    <%=  form.submit class:"text-light btn btn-info w-25" %>
  </div>
  <% end %>
</div>

<div class="container">
  <h1 class="">Todo</h1>
  <div class="container mt-2">
    <% @prtds.each do |prtd| %>
    <div class="border mt-2 w-25">
      <h1>
        <%= prtd.description %>
      </h1>
      <% if prtd.id %>
      <div class=" w-50 mt-3 d-flex justify-content-between gap-1">
        <%= link_to "Show", prtd, method: :delete, class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>